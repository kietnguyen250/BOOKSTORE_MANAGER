<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemHDCT"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_xoaHDCT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/iv_xoaHDCT">

        <TextView
            android:id="@+id/tv_maSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Mã sách: "/>


        <TextView
        android:id="@+id/tv_so_luong_mua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_below="@id/tv_maSach"
        android:text="Số lượng: "/>



        <TextView
            android:id="@+id/tv_gia_bia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_so_luong_mua"
            android:layout_marginTop="3dp"
            android:text="Giá bìa: "/>

        <TextView
            android:id="@+id/tv_thanh_tien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_gia_bia"
            android:layout_marginTop="3dp"
            android:text="Thành tiền: "/>

    </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>