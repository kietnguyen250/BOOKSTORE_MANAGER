<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Dialog.AddPersonDialog">


    <TextView
        android:id="@+id/tv_suaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA THÔNG TIN SÁCH"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fff"
        android:background="@drawable/btn_custom1" />

    <EditText
        android:id="@+id/edt_maSach_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:enabled="false"
        android:background="@drawable/btn_custom"
        android:hint="Mã sách"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/btn_custom">

        <Spinner
            android:id="@+id/sp_TheLoai_edit"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_TheLoai"
            android:spinnerMode="dialog" />
        <TextView
            android:id="@+id/tv_TheLoai"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:background="@drawable/btn_custom1"
            android:textColor="#fff"
            android:text="Loại Sách: "/>

    </RelativeLayout>



    <EditText
        android:id="@+id/edt_tenSach_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/btn_custom"
        android:hint="Tên sách"/>

    <EditText
        android:id="@+id/edt_tacGia_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/btn_custom"
        android:hint="Tác giả"/>

    <EditText
        android:id="@+id/edt_nhaXB_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/btn_custom"
        android:hint="Nhà xuất bản"/>
    <EditText
        android:id="@+id/edt_giaBia_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/btn_custom"
        android:hint="Giá bìa"/>

    <EditText
        android:id="@+id/edt_soLuong_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/btn_custom"
        android:inputType="number"
        android:hint="Số lượng"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_edit_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/btn_custom1"
            android:text="Sửa"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_custom2"
            android:layout_margin="2dp"
            android:text="Hủy"/>

    </LinearLayout>


</LinearLayout>